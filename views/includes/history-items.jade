include ../mixins/icon

for item in items
        .done-list.panel.panel-default(data-date=item.date)
            .panel-heading
                span
                    = item.date
                    //- add a space to prevent iOS recognize date as phone number
                    | &nbsp;
                span.badge= item.events.length

            if item.events.length
                table.table
                    tbody
                        for event in item.events
                            tr
                                td.col-xs-6 #{event.start} - #{event.end}
                                td.col-xs-6
                                    = event.name
                                    a.btn.btn-xs.btn-primary.pull-right(href='/edit/#{event.id}')
                                        +icon('edit')
                                        | &nbsp; Edit
            else
                .panel-body
                    | You didn't record anything on this day.&nbsp;
                    a.btn.btn-xs.btn-info.pull-right(href='/record?date=#{item.date}')
                        +icon('plus')
                        | &nbsp;Add
